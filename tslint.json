{
	"extends": [
		"tslint-react",
		"tslint-config-airbnb"
	],
	"rules": {
		// Modifications:
		"ter-indent": [ true, "tab", { "SwitchCase": 1 } ],
		"no-console": [ true, "log", "error" ],
		"array-bracket-spacing": [ true, "always" ],
		"object-curly-spacing": [ true, "always" ],
		"whitespace": [ true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast", "check-preblock" ],
		"object-literal-key-quotes": [ true, "consistent-as-needed" ],
		"import-name": [ false ],
		"max-line-length": [ false ],
		"ter-arrow-paren": [ false ],
		"jsx-boolean-value": [ false ],
		"jsx-no-multiline-js": false,
		"variable-name": [ true, "allow-pascal-case", "allow-leading-underscore" ],

		"object-shorthand-properties-first": false,

		// Fixes for `tslint-config-airbnb`:
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				}
			}
		]
	}
}
